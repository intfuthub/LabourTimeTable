									$('#txtPurpose').selectize()[0].selectize.destroy();
									$('#txtPurpose').removeAttr('disabled');
									$('#txtPurpose').selectize({
										persist: false,
										create: false,
										maxItems: 1,
										valueField: 'ac_name',
										labelField: 'ac_name',
										searchField: 'ac_name',
										options: xResult,
										render: {
											item: function (data, escape) {
												return '<div>' + escape(data.ac_name) + '</div>';
											}
										}
									});
								}
							});
						}
					}

				});

