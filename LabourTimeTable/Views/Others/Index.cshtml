					persist: false,
					create: false,
					valueField: 'empID',
					labelField: 'Firstname',
					searchField: 'Firstname',
					options: Result._ts_employee,
					render: {
						item: function (data, escape) {
							$("#counter").text('(' + ++counter + ')');
							if (counter == 0 || counter < 0) {
								$("#counter").text('');
							}
							return '<div>' + escape(data.Firstname) + '</div>';
						}
					},
					onDelete: function (values) {
						$("#counter").text('(' + --counter + ')');
						if (counter == 0 || counter < 0) {
							$("#counter").text('');
						}
					}

				});


			}
