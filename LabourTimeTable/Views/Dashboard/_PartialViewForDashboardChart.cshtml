<style>
    #chartdiv {
        width: 100%;
        height: 500px;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-xs-12 col-sm-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-share font-red-sunglo hide"></i>
                    <span class="caption-subject font-dark bold uppercase">Chart</span>
                    <span class="caption-helper">monthly stats...</span>
                </div>
                <div class="actions">
                    <div class="btn-group">
                        <a href="#" class="btn dark btn-circle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            Filter Range
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;">
                                    Daily Stats
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;">
                                    Weekly Stats
                                </a>
                            </li>
                            <li class="active">
                                <a href="javascript:;">
                                    Monthly Stats
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row m-b-1">
                    <div class="col-xs-12">
                        <div class="card shadow">
                            <h4 class="card-header">Job Progress <span class="tag tag-success" id="revenue-tag"></span></h4>
                            <div class="card-block">
                                <div id="chartdiv"></div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
        <!-- END PORTLET-->
    </div>

</div>

<script>
     function LoadVisualAjax() {
        return $.ajax({
            type: "Get",
            url: '@Url.Action("GetChartData", "Dashboard")',
        });
      }
    function LoadVisual() {
        $.when(LoadVisualAjax()).then((data) => {
            DrawChart(data);
        }).fail(() => {
           alert ("Fail to initialize Chart");
        });
      }

    function DrawChart(dataVal) {

        var chart = AmCharts.makeChart("chartdiv", {
            "type": "serial",
            "theme": "light",
            "dataDateFormat": "YYYY-MM-DD",
            "precision": 2,
            "valueAxes": [
                {
                "id": "v1",
                "title": "Target Time",
                "position": "left",
                "autoGridCount": false,
                "labelFunction": function (value) {
                    return "" + Math.round(value) + " hrs";
                }
            }],
            "graphs": [{
                "id": "g3",
                "valueAxis": "v1",
                "lineColor": "#DCDCDC",
                "fillColors": "#DCDCDC",
                "fillAlphas": 1,
                "type": "column",
                "title": "Target Time",
                "valueField": "targethours",
                "clustered": false,
                "columnWidth": 0.5,
                "legendValueText": "[[value]]hrs",
                "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]hrs</b>"
            }, {
                "id": "g4",
                "valueAxis": "v1",
                "lineColor": "#62cf73",
                "fillColors": "#62cf73",
                "fillAlphas": 1,
                "type": "column",
                "title": "Actual Time",
                    "valueField": "workedhours",
                "clustered": false,
                "columnWidth": 0.3,
                "legendValueText": "[[value]] hrs",
                "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]hrs</b>"
                },
                {
                    "id": "g2",
                    "valueAxis": "v2",
                    "bullet": "round",
                    "bulletBorderAlpha": 1,
                    "bulletColor": "#FFFFFF",
                    "bulletSize": 6,
                    "hideBulletsCount": 50,
                    "lineThickness": 2,
                    "lineColor": "#e1ede9",
                    "type": "smoothedLine",
                    "dashLength": 5,
                    "title": "No Of Labors",
                    "useLineColorForBulletBorder": true,
                    "valueField": "person",
                    "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]</b>"
                }],
            //"chartScrollbar": {
            //    "graph": "g1",
            //    "oppositeAxis": false,
            //    "offset": 30,
            //    "scrollbarHeight": 20,
            //    "backgroundAlpha": 0,
            //    "selectedBackgroundAlpha": 0.1,
            //    "selectedBackgroundColor": "#888888",
            //    "graphFillAlpha": 0,
            //    "graphLineAlpha": 0.5,
            //    "selectedGraphFillAlpha": 0,
            //    "selectedGraphLineAlpha": 1,
            //    "autoGridCount": true,
            //    "color": "#AAAAAA"
            //},
            "chartCursor": {
                "pan": true,
                "valueLineEnabled": true,
                "valueLineBalloonEnabled": true,
                "cursorAlpha": 0,
                "valueLineAlpha": 0.2
            },
            "categoryField": "job",
            "categoryAxis": {
                "parseDates": false,
                "dashLength": 1,
                "minorGridEnabled": true
            },
            "legend": {
                "useGraphSettings": true,
                "position": "top"
            },
            "balloon": {
                "borderThickness": 1,
                "shadowAlpha": 0
            },
            "export": {
                "enabled": false
            },
            //dataVal
            "dataProvider": dataVal
            //[{
            //    "job": "971",
            //    "comment": 71,
            //    "qty": 75,
            //    "workedhours": 5.5,
            //    "targethours": 8.9
            //}]
        });
    };
      $(document).ready(function () {
          LoadVisual();
      });
</script>
