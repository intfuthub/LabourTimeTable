    function DrawChart(dataVal) {
        console.log(dataVal);
        var chart = AmCharts.makeChart("chartdiv", {
            "type": "serial",
            "theme": "light",
            "dataDateFormat": "YYYY-MM-DD",
            "precision": 2,
            "valueAxes": [
                {
                "id": "v1",
                "title": "Production Time",
                "position": "left",
                "autoGridCount": false,
                "labelFunction": function (value) {
                    return "" + Math.round(value) + " hrs";
                }
            }],
            "graphs": [{
                "id": "g3",
                "valueAxis": "v1",
                "lineColor": "#DCDCDC",
                "fillColors": "#DCDCDC",
                "fillAlphas": 1,
                "type": "column",
                "title": "Target Time",
                "valueField": "targethours",
                "clustered": false,
                "columnWidth": 0.5,
                "legendValueText": "[[value]]hrs",
                "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]hrs</b>"
            }, {
                "id": "g4",
                "valueAxis": "v1",
                "lineColor": "#62cf73",
                "fillColors": "#62cf73",
                "fillAlphas": 1,
                "type": "column",
                "title": "Actual Time",
                    "valueField": "workedhours",
                "clustered": false,
                "columnWidth": 0.3,
                "legendValueText": "[[value]] hrs",
                "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]hrs</b>"
                },
                {
                    "id": "g2",
                    "valueAxis": "v2",
                    "bullet": "round",
                    "bulletBorderAlpha": 1,
                    "bulletColor": "#FFFFFF",
                    "bulletSize": 6,
                    "hideBulletsCount": 50,
                    "lineThickness": 2,
                    "lineColor": "#e1ede9",
                    "type": "smoothedLine",
                    "dashLength": 5,
                    "title": "No Of Labors",
                    "useLineColorForBulletBorder": true,
                    "valueField": "person",
                    "balloonText": "[[title]]<br /><b style='font-size: 130%'>[[value]]</b>"
                }],
            //"chartScrollbar": {
            //    "graph": "g1",
