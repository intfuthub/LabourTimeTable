@{
	ViewBag.Title = "Handover";
}

<div class="page-container">
	<div class="page-content-wrapper">
		<div class="page-content">
			<h1 class="page-title">Timesheet
			   
				<small>Manage Employee Timesheet</small>
			</h1>
			<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<a href="javascript:;"></a>
					</li>
					<li>
					 <span>@DateTime.UtcNow.ToLongDateString()</span>
					</li>
				</ul>
			</div>

			<div class="portlet light bordered">
				<div class="portlet-title">
					<div class="caption">
						<i class="icon-social-dribbble font-red"></i>
						<span class="caption-subject font-red bold uppercase">Manage Handover</span>
					</div>
				</div>
				<div class="well">
					<!-- BEGIN FORM-->
					<form method="post" id="form" class="form-horizontal">
						<div class="form-body">
							<div class="form-group">
								<label class="col-md-3 control-label">User</label>
								<div class="col-md-4">
									<input type="text" name="txtUser" id="txtUser" autocomplete="off" placeholder="User" class="form-control autocomplete-input">
								</div>
							</div>
							<div class="form-group">
								<label class="col-md-3 control-label">Commnet</label>
								<div class="col-md-4">
									<textarea rows="4" cols="50" class="form-control" style="resize: none;" id="txtCommnet" name="txtCommnet" placeholder="Comments"></textarea>
								</div>
							</div>
						</div>
						<div class="form-actions">
							<div class="row">
								<div class="col-md-offset-3 col-md-9">
									<button type="submit" class="btn green">Handover</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
